<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foreground="@color/purple_200"
    android:foregroundGravity="top"
    tools:context="MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/movie_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Movie Title"
            android:textSize="48sp" />

        <TextView
            android:id="@+id/timer_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textSize="32sp"
            android:textColor="@android:color/holo_orange_dark"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/movie_title_text_view"/>

        <Button
            android:id="@+id/generate_movie_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generate Movie"
            android:textSize="24sp"
            android:layout_below="@id/movie_title_text_view"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:id="@+id/settings_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:visibility="gone">

            <EditText
                android:id="@+id/timer_duration_edit_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Enter time duration (in seconds)"
                android:inputType="number"
                android:imeOptions="actionDone"/>

            <Button
                android:id="@+id/save_settings_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"/>

        </LinearLayout>


        <ImageView
            android:id="@+id/settings_icon"
            android:layout_width="144dp"
            android:layout_height="144dp"
            android:src="@drawable/ic_settings"
            android:padding="16dp"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/timer_text_view"
            />

        <Button
            android:id="@+id/stop_timer_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop Timer"
            android:textSize="24sp"
            android:layout_below="@+id/generate_movie_button"
            android:layout_centerHorizontal="true"
            android:visibility="gone"/>

        <RadioGroup
            android:id="@+id/team_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:padding="16dp">

            <RadioButton
                android:id="@+id/red_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:text="Red Team"
                android:textColor="@android:color/holo_red_dark" />

            <RadioButton
                android:id="@+id/blue_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:text="Blue Team"
                android:textColor="@android:color/holo_blue_dark" />

        </RadioGroup>

        <TextView
            android:id="@+id/red_score_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Red Team: 0"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="24sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:padding="16dp"/>

        <TextView
            android:id="@+id/blue_score_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blue Team: 0"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="24sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:padding="16dp"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
